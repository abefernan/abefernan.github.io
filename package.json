{
  "name": "abefernan-site",
  "version": "1.0.0",
  "author": "Abel Fern√°ndez <abel.fernandez.nandin@gmail.com>",
  "repository": "github:abefernan/abefernan.github.io",
  "description": "abefernan's personal site",
  "license": "MIT",
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Firefox versions",
    "last 2 FirefoxAndroid versions"
  ],
  "babel": {
    "extends": "@snowpack/app-scripts-react/babel.config.json"
  },
  "postcss": {
    "plugins": {
      "stylelint": true,
      "autoprefixer": true
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "snowpack": {
    "extends": "@snowpack/app-scripts-react",
    "plugins": [
      "@snowpack/plugin-webpack"
    ],
    "scripts": {
      "build:css": "postcss",
      "bundle:*": "@snowpack/plugin-webpack"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^1.1.4",
    "@snowpack/plugin-webpack": "^1.1.5",
    "@testing-library/jest-dom": "^5.10.0",
    "@testing-library/react": "^10.2.1",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "autoprefixer": "^9.8.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "jest": "^26.0.1",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "snowpack": "^2.4.0",
    "stylelint": "^13.6.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "dev": "snowpack dev",
    "build": "snowpack build",
    "postbuild": "cp build/index.html index.html && sed -i 's/\\/css/build\\/css/g' index.html && sed -i 's/\\/js/build\\/js/g' index.html",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{html,css,ts,tsx}\"",
    "lint": "stylelint \"src/**/*.css\" && eslint \"src/**/*.{ts,tsx}\""
  }
}
