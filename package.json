{
  "name": "abefernan-site",
  "version": "1.0.0",
  "author": "Abel Fern√°ndez <abel.fernandez.nandin@gmail.com>",
  "repository": "github:abefernan/abefernan.github.io",
  "description": "abefernan's personal site",
  "license": "MIT",
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Firefox versions",
    "last 2 FirefoxAndroid versions"
  ],
  "babel": {
    "extends": "@snowpack/app-scripts-react/babel.config.json"
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": true,
      "postcss-nesting": true,
      "postcss-pseudo-any": true,
      "stylelint": true
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "snowpack": {
    "extends": "@snowpack/app-scripts-react",
    "plugins": [
      "@snowpack/plugin-webpack"
    ],
    "scripts": {
      "build:css": "postcss",
      "bundle:*": "@snowpack/plugin-webpack"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "any"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^1.4.0",
    "@snowpack/plugin-webpack": "^1.5.0",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^26.1.0",
    "modern-css-reset": "^1.1.0",
    "postcss-cli": "^7.1.1",
    "postcss-nesting": "^7.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-pseudo-any": "^1.0.0",
    "prettier": "^2.0.5",
    "snowpack": "^2.6.4",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "dev": "snowpack dev",
    "build": "snowpack build",
    "postbuild": "sed -i 's/\\/css\\//build\\/css\\//g' build/index.html && sed -i 's/\\/js\\//build\\/js\\//g' build/index.html",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{html,css,ts,tsx}\"",
    "lint": "stylelint \"src/**/*.css\" && eslint \"src/**/*.{ts,tsx}\""
  }
}
